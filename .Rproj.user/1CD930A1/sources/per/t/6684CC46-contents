#' sidebar UI Function
#'
#' @description A shiny Module.
#'
#' @param id,input,output,session Internal parameters for {shiny}.
#'
#' @noRd 
#'
#' @importFrom shiny NS tagList 
mod_sidebar_ui <- function(id){
  ns <- NS(id)
  bs4Dash::sidebarMenuOutput(outputId = ns("sidebar"))
}
    
#' sidebar Server Functions
#'
#' @noRd 
mod_sidebar_server <- function(id) {
  
  moduleServer(id, function(input, output, session) {
    
    risk_user_sidebar <- bs4Dash::sidebarMenu(
      id = session$ns("tabs"),
      bs4Dash::menuItem(
        tabName = "home",
        text = "Home",
        icon = icon("home"),
        selected = F ),
      
      bs4Dash::menuItem(
        tabName = "prudentialitate",
        text = "Prudentialitate",
        icon = icon("check-square"),
        selected = FALSE,startExpanded = TRUE,
        bs4Dash::menuSubItem(
          text = "Soldul de garantii ",
          tabName = "garantii",
          selected = TRUE,
          icon = icon("money-bill")
        )
      )
    )
    
 
    
  output$sidebar <- bs4Dash::renderMenu(risk_user_sidebar)
  })
   
  
}
    
