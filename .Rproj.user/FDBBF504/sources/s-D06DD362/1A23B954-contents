if (sum("garantii" == vals$sidebar_selected)==1) {
  
  mod_garantii_upload_server("garantii_upload_ui_1", vals)
  mod_garantii_manual_server("garantii_manual_ui_1", vals)
  
  # this speeds up the process. vals$sidebar_selected se updateaza greu.user-ul schimba mult mai repede selectia sidebar decat se updateaza vals$sidebar_selected
  vals$sidebar_selected <- c(vals$sidebar_selected,"garantii") }

